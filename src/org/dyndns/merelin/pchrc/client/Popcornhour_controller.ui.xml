<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:pchrc='urn:import:org.dyndns.merelin.pchrc.client'>

    <g:DockLayoutPanel unit='EM'>
        <g:north size='4'>
            <pchrc:TopPanel ui:field='topPanel' />
        </g:north>

        <g:center>
            <g:SplitLayoutPanel>
                <g:west size='192'>
                    <pchrc:Shortcuts ui:field='shortcuts' />
                </g:west>

                <g:north size='200'>
                    <pchrc:MailList ui:field='mailList' />
                </g:north>

                <g:center>
                    <pchrc:MailDetail ui:field='mailDetail' />
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
